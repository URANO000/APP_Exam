@*
    Since we have a list of categorias, we will use a for loop
*@
@model List<Caso_Estudio_1.Models.Entities.Categoria>

<h1>Categorias</h1>

<div class="mt-3">
    <button class="btn btn-primary"><a class="text-white text-decoration-none" asp-action="Add">Crear</a></button>

</div>
<br />
<table class="table table-dark border-dark">
    <thead>
        <tr class="text-white">
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Detalle</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody class="text-white">
        @foreach (var categoria in Model)
        {
            <tr scope="row">
                <td>@categoria.categoriaId</td>


                <td>@categoria.nombre</td>


                <td>@categoria.detalle</td>
                <td>
                    <button class="btn btn-danger"><a class="text-white text-decoration-none" asp-controller="Categoria" asp-action="Delete" asp-route-id="@categoria.categoriaId">Eliminar</a></button>
                    <button class="btn btn-info"><a class="text-white text-decoration-none" asp-controller="Categoria"  asp-action="Edit" asp-route-id="@categoria.categoriaId">Editar</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>