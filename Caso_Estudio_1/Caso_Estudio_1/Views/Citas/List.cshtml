@model List<Caso_Estudio_1.Models.Entities.Citas>


<h1 class="mb-4">Citas registradas</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Search form -->
    <form asp-action="List" asp-controller="Citas" method="get" class="d-flex">
        <input type="number" name="searchId" class="form-control me-2" placeholder="Buscar por ID de cita" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>


    <a asp-controller="Servicios" asp-action="List" class="btn btn-success">Ver Servicios / Reservar</a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}

@if (Model == null || !Model.Any())
{
    <p>No hay citas registradas actualmente...</p>
}
else
{
    <table class="table table-dark border-dark text-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre de la Persona</th>
                <th>Identificación</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Servicio</th>
                <th>Fecha de la Cita</th>
                <th>Monto Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.Id</td>
                    <td>@cita.NombreDeLaPersona</td>
                    <td>@cita.Identificacion</td>
                    <td>@cita.Telefono</td>
                    <td>@cita.Correo</td>
                    <td>
                        @if (cita.Servicio != null)
                        {
                            @cita.Servicio.Nombre
                        }
                        else
                        {
                            <span class="text-secondary">Sin información</span>
                        }
                    </td>
                    <td>@cita.FechaDeLaCita.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>₡@cita.MontoTotal</td>
                    <td>
                        <a asp-action="Detalles" asp-controller="Citas" asp-route-id="@cita.Id" class="btn btn-info text-white text-decoration-none">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
