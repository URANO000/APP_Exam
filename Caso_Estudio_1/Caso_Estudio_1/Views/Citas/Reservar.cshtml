@model Caso_Estudio_1.Models.AddCitaViewModel
@{
    ViewData["Title"] = "Reservar cita";
    var totalEstimado = Model.Monto + (Model.Monto * (Model.IVA / 100M));
}

<h2 class="mb-3">Reservar: @Model.NombreServicio</h2>

<form asp-action="Reservar" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdServicio" />
    <input type="hidden" asp-for="Monto" />
    <input type="hidden" asp-for="IVA" />

    <fieldset class="border rounded p-3 mb-3">
        <legend class="float-none w-auto px-2 fs-6 text-muted">Servicio</legend>
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Especialidad</label>
                <input class="form-control" value="@Model.EspecialidadTexto" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label">Especialista</label>
                <input class="form-control" value="@Model.Especialista" readonly />
            </div>
            <div class="col-md-2">
                <label class="form-label">Monto</label>
                <input class="form-control" value="@Model.Monto.ToString("N2")" readonly />
            </div>
            <div class="col-md-2">
                <label class="form-label">IVA %</label>
                <input class="form-control" value="@Model.IVA.ToString("N2")" readonly />
            </div>
        </div>
    </fieldset>

    <fieldset class="border rounded p-3 mb-3">
        <legend class="float-none w-auto px-2 fs-6 text-muted">Datos del paciente</legend>

        <div class="mb-3">
            <label asp-for="NombreDeLaPersona" class="form-label"></label>
            <input asp-for="NombreDeLaPersona" class="form-control" />
            <span asp-validation-for="NombreDeLaPersona" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="Identificacion" class="form-label"></label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" type="email" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mt-1">
            <div class="col-md-4">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="FechaDeLaCita" class="form-label"></label>
                <input asp-for="FechaDeLaCita" type="datetime-local" class="form-control" />
                <span asp-validation-for="FechaDeLaCita" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="Direccion" class="form-label"></label>
            <textarea asp-for="Direccion" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
    </fieldset>

    <div class="alert alert-info mb-3">
        <strong>Monto total estimado:</strong> ₡ @totalEstimado.ToString("N2")
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Confirmar reserva</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
