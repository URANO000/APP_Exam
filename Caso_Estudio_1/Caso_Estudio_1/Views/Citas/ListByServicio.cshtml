@model List<Caso_Estudio_1.Models.Entities.Citas>



<h3 class="mb-4">Citas del servicio: @ViewBag.Servicio?.Nombre</h3>

@if (!Model.Any())
{
    <p>No hay citas registradas para este servicio.</p>
}
else
{
    <table class="table table-dark border-dark text-white">
        <thead>
            <tr>
                <th>Nombre de Persona</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Identificación</th>
                <th>Monto total</th>
                <th>Fecha de nacimiento</th>
                <th>Fecha cita</th>
                <th>Fecha de registro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.NombreDeLaPersona</td>
                    <td>@cita.Telefono</td>
                    <td>@cita.Correo</td>
                    <td>@cita.Identificacion</td>
                    <td>₡@cita.MontoTotal</td>
                    <td>@cita.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    <td>@cita.FechaDeLaCita.ToString("dd/MM/yyyy")</td>
                    <td>@cita.FechaDeRegistro.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
