@model Caso_Estudio_1.Models.CitaDetailsViewModel
@{
    ViewData["Title"] = "Detalle de cita";
}

<h2 class="mb-3">Detalle de cita #@Model.Id</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.NombreDeLaPersona</dd>
            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>
            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>
            <dt class="col-sm-3">Identificación</dt>
            <dd class="col-sm-9">@Model.Identificacion</dd>
            <dt class="col-sm-3">Fecha de nacimiento</dt>
            <dd class="col-sm-9">@Model.FechaNacimiento.ToShortDateString()</dd>
            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@Model.Direccion</dd>

            <dt class="col-sm-3">Servicio</dt>
            <dd class="col-sm-9">@Model.NombreServicio</dd>
            <dt class="col-sm-3">Especialidad</dt>
            <dd class="col-sm-9">@Model.EspecialidadTexto</dd>
            <dt class="col-sm-3">Especialista</dt>
            <dd class="col-sm-9">@Model.Especialista</dd>
            <dt class="col-sm-3">Clínica</dt>
            <dd class="col-sm-9">@Model.Clinica</dd>

            <dt class="col-sm-3">Monto total</dt>
            <dd class="col-sm-9">₡ @Model.MontoTotal</dd>
            <dt class="col-sm-3">Fecha de la cita</dt>
            <dd class="col-sm-9">@Model.FechaDeLaCita</dd>
            <dt class="col-sm-3">Fecha de registro</dt>
            <dd class="col-sm-9">@Model.FechaDeRegistro</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
</div>
