@model Caso_Estudio_1.Models.AddCitaViewModel
@{
    ViewData["Title"] = "Nueva cita";
    var servicios = ViewBag.Servicios as List<Caso_Estudio_1.Models.ServicioViewModel>;
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="card p-3">
    <div class="mb-3">
        <label class="form-label">Servicio</label>
        <select asp-for="IdServicio" class="form-select" required>
            <option value="">-- Seleccione --</option>
            @foreach (var s in servicios)
            {
                <option value="@s.Id">@s.Nombre</option>
            }
        </select>
        <span asp-validation-for="IdServicio" class="text-danger"></span>
    </div>

    <partial name="_FormCitaCampos" model="Model" />

    <button class="btn btn-primary" type="submit">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
