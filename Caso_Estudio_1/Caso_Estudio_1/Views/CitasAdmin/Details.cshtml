@model Caso_Estudio_1.Models.CitaDetailsViewModel
@{
    ViewData["Title"] = "Detalle de cita";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">@ViewData["Title"] #@Model.Id</h2>
    <a class="btn btn-outline-light btn-sm" asp-action="Index">Volver</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h6 class="text-body-secondary text-uppercase mb-3">Paciente</h6>
        <div class="table-responsive mb-4">
            <table class="table table-sm align-middle mb-0">
                <tbody>
                    <tr>
                        <th class="w-25 fw-semibold">Nombre</th>
                        <td>@Model.NombreDeLaPersona</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Teléfono</th>
                        <td>@Model.Telefono</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Correo</th>
                        <td>@Model.Correo</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Identificación</th>
                        <td>@Model.Identificacion</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Fecha de nacimiento</th>
                        <td>@Model.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Dirección</th>
                        <td>@Model.Direccion</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <h6 class="text-body-secondary text-uppercase mb-3">Servicio</h6>
        <div class="table-responsive mb-4">
            <table class="table table-sm align-middle mb-0">
                <tbody>
                    <tr>
                        <th class="w-25 fw-semibold">Servicio</th>
                        <td>@Model.NombreServicio</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Especialidad</th>
                        <td>@Model.EspecialidadTexto</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Especialista</th>
                        <td>@Model.Especialista</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Clínica</th>
                        <td>@Model.Clinica</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <h6 class="text-body-secondary text-uppercase mb-3">Cita</h6>
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <tbody>
                    <tr>
                        <th class="w-25 fw-semibold">Monto total</th>
                        <td>₡ @Model.MontoTotal.ToString("N2")</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Fecha de la cita</th>
                        <td>@Model.FechaDeLaCita.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                    <tr>
                        <th class="fw-semibold">Fecha de registro</th>
                        <td>@Model.FechaDeRegistro.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
