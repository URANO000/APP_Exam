@model IEnumerable<Caso_Estudio_1.Models.CitaAdminDto>
@{
    ViewData["Title"] = "Histórico de Citas";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="m-0">Histórico de Citas</h4>
        </div>

        <div class="card-body">
            <form method="get" asp-controller="ReservaAdmin" asp-action="List" class="row g-2 align-items-end mb-3">
                <div class="col-auto">
                    <label class="form-label" for="idServicio">Servicio:</label>
                    <select id="idServicio" name="idServicio" class="form-select" asp-items="@(ViewBag.Servicios)">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a asp-controller="ReservaAdmin" asp-action="List" class="btn btn-outline-secondary">Limpiar</a>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-info m-0">No hay citas para los criterios seleccionados.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle m-0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th>Identificación</th>
                                <th>Monto total</th>
                                <th>F. nacimiento</th>
                                <th>F. cita</th>
                                <th>F. registro</th>
                                <th>Servicio</th>
                                <th>Especialidad</th>
                                <th>Especialista</th>
                                <th>Clínica</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model)
                            {
                                <tr>
                                    <td>@c.Id</td>
                                    <td>@c.NombreDeLaPersona</td>
                                    <td>@c.Telefono</td>
                                    <td>@c.Correo</td>
                                    <td>@c.Identificacion</td>
                                    <td>₡ @c.MontoTotal.ToString("N2")</td>
                                    <td>@c.FechaNacimiento:yyyy-MM-dd</td>
                                    <td>@c.FechaDeLaCita:yyyy-MM-dd HH\\:mm</td>
                                    <td>@c.FechaDeRegistro:yyyy-MM-dd HH\\:mm</td>
                                    <td>@c.NombreServicio (Id @c.IdServicio)</td>
                                    <td>@c.EspecialidadEnProsa</td>
                                    <td>@c.Especialista</td>
                                    <td>@c.Clinica</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
